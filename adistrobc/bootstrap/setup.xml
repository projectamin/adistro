<amin:profile xmlns:amin='http://projectamin.org/ns/'>
<!--setup the bootstrap env-->
	<amin:command name='mkdir'>
		<amin:param name='target'>adistrobc</amin:param>
		<amin:shell name='dir'>/opt/</amin:shell>
		<amin:flag>p</amin:flag>
	</amin:command>
	<amin:command name='mkdir'>
		<amin:param name='target'>packages src adistrobc-bootstrap</amin:param>
                <amin:shell name='dir'>/opt/adistrobc/</amin:shell>
		<amin:flag>p</amin:flag>
	</amin:command>
        <amin:command name="link">
		<amin:param name="source">/opt/adistrobc/adistrobc-bootstrap</amin:param>
                <amin:param name="target">/adistrobc-bootstrap</amin:param>
                <amin:flag>sf</amin:flag>
        </amin:command>
</amin:profile>
