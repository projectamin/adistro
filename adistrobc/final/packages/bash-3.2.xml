<amin:profile xmlns:amin='http://projectamin.org/ns/'>
<amin:chroot dir='/opt/adistrobc'>
	<amin:command name='unpack'>
		<amin:param name='target'>/src</amin:param>
		<amin:param name='archive'>/packages/bash-3.2.tar.gz</amin:param>
		<amin:shell name='env'>PATH=/usr/bin:/bin:/sbin:/usr/sbin:/adistrobc-bootstrap/bin</amin:shell>
	</amin:command>
	<amin:command name='patch'>
		<amin:flag>Np1</amin:flag>
		<amin:flag name='input'>/packages/bash-3.2-fixes.patch</amin:flag>
		<amin:shell name='dir'>/src/bash-3.2</amin:shell>
	</amin:command>
	<amin:command name='configure'>
		<amin:shell name='dir'>/src/bash-3.2</amin:shell>
		<amin:flag>prefix=/usr bindir=/bin without-bash-malloc with-installed-readline</amin:flag>
		<amin:shell name='env'>PATH=/usr/bin:/bin:/sbin:/usr/sbin:/adistrobc-bootstrap/bin</amin:shell>
	</amin:command>
	<amin:command name='make'>
		<amin:shell name='dir'>/src/bash-3.2</amin:shell>
		<amin:shell name='env'>PATH=/usr/bin:/bin:/sbin:/usr/sbin:/adistrobc-bootstrap/bin</amin:shell>
	</amin:command>
	<amin:command name='make'>
		<amin:param>install</amin:param>
		<amin:shell name='dir'>/src/bash-3.2</amin:shell>
		<amin:shell name='env'>PATH=/usr/bin:/bin:/sbin:/usr/sbin:/adistrobc-bootstrap/bin</amin:shell>
	</amin:command>
	<amin:command name='remove'>
		<amin:param name='target'>bash-3.2</amin:param>
		<amin:flag>rf</amin:flag>
		<amin:shell name='dir'>/src/</amin:shell>
	</amin:command>
</amin:chroot>
</amin:profile>
