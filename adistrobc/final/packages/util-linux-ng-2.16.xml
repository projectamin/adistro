<amin:profile xmlns:amin='http://projectamin.org/ns/'>
<amin:chroot dir='/opt/adistrobc'>
	<amin:command name='unpack'>
		<amin:param name='target'>/src</amin:param>
		<amin:param name='archive'>/packages/util-linux-ng-2.16.tar.gz</amin:param>
		<amin:shell name='env'>PATH=/usr/bin:/bin:/sbin:/usr/sbin:/adistrobc-bootstrap/bin</amin:shell>
	</amin:command>
	<amin:command name='configure'>
		<amin:shell name='dir'>/src/util-linux-ng-2.16</amin:shell>
		<amin:shell name='env'>PATH=/usr/bin:/bin:/sbin:/usr/sbin:/adistrobc-bootstrap/bin</amin:shell>
	</amin:command>
	<amin:command name='make'>
		<amin:shell name='dir'>/src/util-linux-ng-2.16</amin:shell>
		<amin:shell name='env'>PATH=/usr/bin:/bin:/sbin:/usr/sbin:/adistrobc-bootstrap/bin</amin:shell>
	</amin:command>
	<amin:command name='make'>
		<amin:param>install</amin:param>
		<amin:shell name='dir'>/src/util-linux-ng-2.16</amin:shell>
		<amin:shell name='env'>PATH=/usr/bin:/bin:/sbin:/usr/sbin:/adistrobc-bootstrap/bin</amin:shell>
	</amin:command>
	<amin:command name='remove'>
		<amin:param name='target'>util-linux-ng-2.16</amin:param>
		<amin:flag>rf</amin:flag>
		<amin:shell name='dir'>/src/</amin:shell>
	</amin:command>
</amin:chroot>
</amin:profile>