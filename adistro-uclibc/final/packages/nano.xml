<amin:profile xmlns:amin='http://projectamin.org/ns/'>

<!--nano-->

<amin:chroot dir='/opt/adistro-uclibc'>

        <amin:command name='unpack'>
                <amin:param name='target'>/build</amin:param>
                <amin:param name='archive'>/packages/nano-2.0.7.tar.gz</amin:param>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

        <amin:command name='configure'>
                <amin:flag>
		prefix=/usr
		sysconfdir=/etc
		enable-color
                enable-multibuffer
		enable-nanorc
                </amin:flag>
                <amin:shell name='dir'>/build/nano-2.0.7</amin:shell>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
		<amin:shell name='env'>CFLAGS=-Os</amin:shell>
        </amin:command>

        <amin:command name='make'>
                <amin:shell name='dir'>/build/nano-2.0.7</amin:shell>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

        <amin:command name='make'>
		<amin:param>install</amin:param>
                <amin:shell name='dir'>/build/nano-2.0.7</amin:shell>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

        <amin:command name='mkdir'>
		<amin:flag>p</amin:flag>
		<amin:param name='target'>/usr/share/doc/nano/examples</amin:param>
		<amin:shell name='dir'>/</amin:shell>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

        <amin:command name='remove'>
		<amin:flag>rf</amin:flag>
                <amin:param name="target">nano-2.0.7</amin:param>
                <amin:shell name='dir'>/build</amin:shell>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

</amin:chroot>
</amin:profile>
