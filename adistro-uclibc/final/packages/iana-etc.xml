<amin:profile xmlns:amin='http://projectamin.org/ns/'>

<!--iana-etc-->

<amin:chroot dir='/opt/adistro-uclibc'>

        <amin:command name='unpack'>
                <amin:param name='target'>/build</amin:param>
                <amin:param name='archive'>/packages/iana-etc-2.20.tar.bz2</amin:param>
		<amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

        <amin:command name='make'>
                <amin:shell name='dir'>/build/iana-etc-2.20</amin:shell>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

        <amin:command name='make'>
		<amin:param>install</amin:param>
                <amin:shell name='dir'>/build/iana-etc-2.20</amin:shell>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

        <amin:command name='remove'>
		<amin:flag>rf</amin:flag>
                <amin:param name="target">iana-etc-2.20</amin:param>
                <amin:shell name='dir'>/build</amin:shell>
                <amin:shell name="env">PATH=/bin:/usr/bin:/sbin:/usr/sbin:/bootstrap/bin</amin:shell>
        </amin:command>

</amin:chroot>
</amin:profile>
